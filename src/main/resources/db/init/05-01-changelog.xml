<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.32.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1751749023448-1" author="bette">
        <createTable ifNotExists="true" tableName="categories">
            <column name="category_id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="pk_categories"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="1751749023448-2" author="bette">
        <createTable ifNotExists="true" tableName="favorites">
            <column name="favorite_id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="pk_favorites"/>
            </column>
            <column name="user_id" type="BIGINT"/>
            <column name="product_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="1751749023448-3" author="bette">
        <createTable ifNotExists="true" tableName="users">
            <column name="user_id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(255)"/>
            <column name="password_hash" type="VARCHAR(255)"/>
            <column name="role" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>